<%= form_for @recipe do |f| %>
  <div class="update_recipe modal" > 
    <div class="modal-header"> 
      <h3>edit recipe</h3>
      <a href="#" class="close">&times;</a> 
    </div> 
    <div class="modal-body"> 
      <%= f.label :name, "name" %>&nbsp;&nbsp;
      <%= f.text_field :name, :class => "xlarge" %>
    </div>
    <div class="modal-footer"> 
      <div class="btn_left">
        <%= link_to "delete", recipe_path(@recipe), :confirm => "Are you sure?", :method => :delete, :id => "delete", :class => "btn danger" %>
      </div>
    	<%= f.submit "save", :class => "btn primary", :id => "submitRecipe" %>
      <a href="#" class="btn secondary" id="nevermind" >nevermind</a> 
    </div> 
  </div> 
<% end %>
<div id="mask"></div>